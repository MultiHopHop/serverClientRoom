<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.serverclientroom"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.serverclientroom.Mainpage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.serverclientroom.Server"
            android:label="@string/title_activity_server" >
        </activity>
        <activity
            android:name="com.example.serverclientroom.Client"
            android:label="@string/title_activity_client" >
        </activity>
        <activity
            android:name="com.example.serverclientroom.Grid"
            android:label="@string/title_activity_grid" >
        </activity>
        <activity
            android:name="com.example.serverclientroom.ClientGrid"
            android:label="@string/title_activity_client_grid"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
